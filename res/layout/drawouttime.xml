<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/linemini"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/drowouttime_text1"
            android:textColor="@color/allblue"
            android:textSize="@dimen/textmax" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/drowouttime_text2"
                android:textColor="@color/allblue"
                android:textSize="@dimen/textmid" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/drowouttime_text3"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/textmid" />
        </LinearLayout>

        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbarStyle="outsideOverlay" />
    </LinearLayout>

    <Button
        android:id="@+id/but_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linemax"
        android:layout_gravity="bottom"
        android:background="@color/drowouttimesave"
        android:onClick="savetime"
        android:text="@string/save"
        android:textColor="@color/write"
        android:textSize="@dimen/textmid"
        android:layout_marginBottom="65dp" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="报名成功"
            android:textSize="@dimen/linemini" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我们将在两个工作日内进行审核" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/textmid"
            android:gravity="center"
            android:text="邀请更多的司机加入走着平台可获得优先接单权和获得被“金牌司机”专栏报道的机会~！赶快邀请您的朋友加入吧~！" />
    
        
        
           <Button 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成注册"
                android:gravity="center"
                android:layout_marginTop="@dimen/textmini"
                android:textColor="@color/loginfront"
                android:background="@drawable/loginbackground"
                android:onClick="submit"/>
    	
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_faxianshangjia_tupian"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/myphoto" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/im_faxianshangjia_tupian"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_faxianshangjia_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:singleLine="true"
            android:text="现在是玲曾三点中你都"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_faxiangshangjia_didian"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="12"
            android:singleLine="true"
            android:text="上海异界宏图店"
            android:textColor="@android:color/darker_gray"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/ll_faxiangshangjiastart"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_faxiangshangjiastart0"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/xingxingbai" />

            <ImageView
                android:id="@+id/iv_faxiangshangjiastart1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/xingxingbai" />

            <ImageView
                android:id="@+id/iv_faxiangshangjiastart2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/xingxingbai" />

            <ImageView
                android:id="@+id/iv_faxiangshangjiastart3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/xingxingbai" />

            <ImageView
                android:id="@+id/iv_faxiangshangjiastart4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/xingxingbai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="好评数："
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_faxianshangjia_haopinglv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/gps" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="@string/dayuhao"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_faxianshangjia_juli"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="1000km"
            android:textColor="@color/blue" />
    </LinearLayout>
</LinearLayout>
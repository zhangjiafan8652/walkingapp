<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:gravity="center"
        android:text="走着旅行"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:background="@color/alltitilebackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/loginsizewith"
            android:layout_height="@dimen/loginsizewith"
            android:src="@drawable/loginheadphoto"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/loginwidth"
            android:layout_marginLeft="@dimen/textmax"
            android:layout_marginRight="@dimen/textmax"
            android:layout_marginTop="75dp"
            android:background="@drawable/login1background"
            android:text="快速登录"
            android:textColor="@color/loginfront"
            android:textSize="@dimen/textmax" />

        <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/loginwidth"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/textmax"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/textmax"
            android:background="@drawable/registloginbackground"
            android:text="快速注册"
            android:textColor="@color/loginfront"
            android:textSize="@dimen/textmax" />
    </LinearLayout>

</RelativeLayout>